<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:id="@+id/share_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/mbga_circle_corner" >

        <WebView
            android:id="@+id/webview_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none" />
        
    </RelativeLayout>

     <ImageButton
         android:id="@+id/share_close_btn"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_alignTop="@+id/share_rl"
         android:layout_toRightOf="@+id/share_rl"
         android:layout_marginLeft="5dp"
         android:background="@drawable/mbga_share_close_btn" />

</RelativeLayout>